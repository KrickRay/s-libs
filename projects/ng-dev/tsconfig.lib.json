/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["jasmine"],
    "lib": ["dom", "es2018"]
  },
  "exclude": [
    "src/test.ts",
    "src/test-polyfills.ts",
    "**/*.spec.ts",
    // excluded for the sake of TSDoc
    "src/typing-tests"
  ],
  "angularCompilerOptions": {
    // So far, ivy does not handle the dynamic wrapper component for ComponentContext.
    "enableIvy": false
  }
}
